@using EcommerceShop.Shared.Rating
@model IEnumerable<RatingVm>

<h4 class="text-center" style="color:#ff003c">Phản Hồi Sản Phẩm</h4>

@foreach (var item in Model)
{
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-2">
                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid" />
                </div>
                <div class="col-md-10">
                    <p>
                        <a class="float-left" href="https://maniruzzaman-akash.blogspot.com/p/contact.html"></a>
                        <span>
                            @{
                                for (int i = 1; i <= item.RateValue; i++)
                                {
                                    <i class="fas fa-star" style="color:yellow"></i>
                                }
                                for (int i = 1; i <= 5 - item.RateValue; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            }
                        </span>
                    </p>
                    <div class="clearfix"></div>
                    <p>
                        @item.FeedBack
                    </p>

                </div>
            </div>
        </div>
    </div>
}
